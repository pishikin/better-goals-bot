{
  "name": "better-goals-app",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy:locales",
    "copy:locales": "mkdir -p dist/locales && rm -rf dist/locales/en dist/locales/ru && cp src/locales/en.ftl dist/locales/en.ftl && cp src/locales/ru.ftl dist/locales/ru.ftl",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "goals",
    "tracking"
  ],
  "author": "",
  "license": "MIT",
  "description": "Minimalist Telegram bot for tracking key life areas",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@grammyjs/i18n": "^1.1.2",
    "@prisma/client": "^6.19.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.3",
    "node-cron": "^4.2.1",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.19.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
